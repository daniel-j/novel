\newcommand\@parsedropcapstyle {%
  \StrDel{\@dropcapkeys}{\space}[\@dropcapkeys]%
  %
  \StrBehind{\@dropcapkeys}{lines=}[\@myLlines]%
  \StrBefore{\@myLlines}{,}[\@myLlines]%
  \ifthenelse{\equal{\@myLlines}{}}{}{\global\setcounter{DefaultLines}{\@myLlines}}%
  %
  \StrBehind{\@dropcapkeys}{depth=}[\@myLdepth]%
  \StrBefore{\@myLdepth}{,}[\@myLdepth]%
  \ifthenelse{\equal{\@myLdepth}{}}{}{\setcounter{DefaultDepth}{\@myLdepth}}%
  %
  \StrBehind{\@dropcapkeys}{lhang=}[\@myLhang]%
  \StrBefore{\@myLhang}{,}[\@myLhang]%
  \ifthenelse{\equal{\@myLhang}{}}{}{\renewcommand*{\DefaultLhang}{\@myLhang}}%
  %
  \StrBehind{\@dropcapkeys}{ante=}[\@myLante]%
  \StrBefore{\@myLante}{,}[\@myLante]%
  \ifthenelse{\equal{\@myLante}{}}{}{\renewcommand*{\DefaultLante}{\@myLante}}%
  %
  \StrBehind{\@dropcapkeys}{kern=}[\@myDCkern]%
  \StrBefore{\@myDCkern}{,}[\@myDCkern]%
  \ifthenelse{\equal{\@myDCkern}{}}{}{\setlength{\DefaultDCkern}{\@myDCkern}}%
  %
  \StrBehind{\@dropcapkeys}{gap=}[\@myDCgap]%
  \StrBefore{\@myDCgap}{,}[\@myDCgap]%
  \ifthenelse{\equal{\@myDCgap}{}}{}{\setlength{\DefaultDCgap}{\@myDCgap}}%
  %
  \StrBehind{\@dropcapkeys}{top=}[\@myDCtop]%
  \StrBefore{\@myDCtop}{,}[\@myDCtop]%
  \ifthenelse{\equal{\@myDCtop}{}}{}{\setlength{\DefaultDCtop}{\@myDCtop}}%
  %
  \StrBehind{\@dropcapkeys}{slope=}[\@mySlope]%
  \StrBefore{\@mySlope}{,}[\@mySlope]%
  \ifthenelse{\equal{\@mySlope}{}}{}{\setlength{\DefaultSlope}{\@mySlope}}%
  %
  \StrBehind{\@dropcapkeys}{xoffset=}[\@myDCxoffset]%
  \StrBefore{\@myDCxoffset}{,}[\@myDCxoffset]%
  \ifthenelse{\equal{\@myDCxoffset}{}}{}{\setlength{\DefaultDCxoffset}{\@myDCxoffset}}%
