%
\newcommand*{\CalculateDropcap}[1]{%
   % Calculate the height of drop cap area, from lowest maintext baseline
   %   to desired top (above first maintext baseline):
   \setlength{\DC@height}{\value{DC@lines}\baselineskip}%
   \addtolength{\DC@height}{-\baselineskip}%
   \addtolength{\DC@height}{\DC@top}% = (lines-1)+top
   \global\DC@height=\DC@height%
   \def\DC@heightnum{\strip@pt\DC@height}%
   % Find the ratio (height of dropcap area)/(height of X in dropcapfont):
   \sbox{\@tempboxa}{\dropcapfont\fontsize{\DC@height}{\DC@height}%
                     \selectfont X}%
   \setlength\DC@Xheight{\ht\@tempboxa}%
   \global\DC@Xheight=\DC@Xheight%
   \def\DC@Xheightnum{\strip@pt\DC@Xheight}%
   \FPifgt{\DC@Xheightnum}{5}\else% Sanity check. Possible missing X character in dropcapfont.
     \FPmul{\DC@Xheightnum}{\DC@heightnum}{0.65}% Guessed value.
     \ClassWarning{novel}{^^JThe dropcapfont does not have character X. Very unusual!^^J%
      Proceeding with guessed value. Dropcap will probably be wrong.^^J}%
   \fi%
   % Test for character with descender, such as Ccedilla:
   \sbox{\DC@char}{\dropcapfont\fontsize{\DC@height}{\DC@height}%
                     \selectfont #1}%
   \setlength\DC@chardepth{\dp\DC@char}%
   \global\DC@chardepth=\DC@chardepth%
   \setlength\DC@chartotal{\DC@Xheight}%
   \addtolength\DC@chartotal{\DC@chardepth}%
   \global\DC@chartotal=\DC@chartotal%
   \def\DC@chartotalnum{\strip@pt\DC@chartotal}%
   \setlength\DC@adjheight{\DC@height}%
   \addtolength\DC@adjheight{\DC@maindescenderdepth}%
   \global\DC@adjheight=\DC@adjheight%
   \def\DC@adjheightnum{\strip@pt\DC@adjheight}%
   \ifthenelse{\dimtest{\DC@chardepth}{>}{\DC@maindescenderdepth}}%
     {\global\DC@squeezetrue}%
     {\global\DC@squeezefalse}%
   \ifDC@squeeze%
     \ifthenelse{\equal{\DC@descender}{up}}{%
       \FPdiv{\DC@Xscale}{\DC@adjheightnum}{\DC@chartotalnum}%
       \setlength\DC@fontsize{\DC@Xscale\DC@height}%
       \dropcapfont\fontsize{\DC@fontsize}{\DC@fontsize}\selectfont\textcolor{\DC@color}{#1}%
     }{%
       \FPdiv{\DC@Xscale}{\DC@heightnum}{\DC@Xheightnum}%
       \setlength\DC@fontsize{\DC@Xscale\DC@height}%
       \dropcapfont\fontsize{\DC@fontsize}{\DC@fontsize}\selectfont\textcolor{\DC@color}{#1}%
     }%
   \else%
     \FPdiv{\DC@Xscale}{\DC@heightnum}{\DC@Xheightnum}%
     \setlength\DC@fontsize{\DC@Xscale\DC@height}%
     \dropcapfont\fontsize{\DC@fontsize}{\DC@fontsize}\selectfont\textcolor{\DC@color}{#1}%
   \fi%
}
