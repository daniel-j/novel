  \setlength{\L@gap}{\DefaultDCgap}%
  \setlength{\L@slope}{\DefaultSlope}%
  \renewcommand*{\L@color}{\DefaultLcolor}%
  \setlength{\L@top}{\DefaultDCtop}%
  \renewcommand*{\L@descender}{\DefaultLdescender}%
  \setkeys{L}{#1}%
  \setlength{\L@Findent}{\L@gap+\L@kern}%
  \setlength{\L@Nindent}{-\L@kern}%
  \sbox{\L@lbox}{\CalculateDropcap{#2}}%
  \setlength{\DC@chardepth}{\dp\L@lbox}%
  \global\DC@chardepth=\DC@chardepth%
  \par%
  \addtolength{\L@Nindent}{\L@xoffset}%
  \setlength{\L@Pindent}{\wd\L@lbox}%
  \settowidth{\L@hangante}{\L@ante}%
  \if@hangante\addtolength{\L@Pindent}{-\L@hangante}\fi%
  \settowidth{\L@first}{\L@ante}%
  \addtolength{\L@Pindent}{\L@first}%
  \addtolength{\L@Pindent}{\L@Findent}%
  \setlength{\L@first}{\linewidth}%
  \addtolength{\L@first}{-\L@Pindent}%
  \addtolength{\L@Nindent}{\L@Pindent}%
  \setlength{\L@next}{\linewidth}%
  \addtolength{\L@next}{-\L@Nindent}%
  \addtolength{\L@Pindent}{\rightmargin}%
  \addtolength{\L@Nindent}{\rightmargin}%
  \setlength{\DropcapWidth}{\wd\L@lbox}%
  \setlength{\DropcapHeight}{\ht\L@lbox}%
  \setlength{\DropcapDepth}{\dp\L@lbox}%
  \addtocounter{DC@lines}{1}%
  \ifDC@squeeze%
    \ifthenelse{\equal{\L@descender}{down}}{%
      \ifnum\value{L@depth}=0% %%%%%
        \setcounter{L@depth}{1}%
      \fi%
    }{}%
  \fi%
  \addtocounter{DC@lines}{\value{L@depth}}%
  \def\L@parshape{\c@DC@lines \the\L@Pindent \the\L@first}%
  \@tempcnta=\tw@%
  \@whilenum \@tempcnta<\c@DC@lines\do{%
     \edef\L@parshape{\L@parshape \the\L@Nindent \the\L@next}%
     \addtolength{\L@Nindent}{\L@slope}%
     \addtolength{\L@next}{-\L@slope}%
     \advance\@tempcnta\@ne}%
  \edef\L@parshape{\L@parshape \rightmargin \the\linewidth}%
  \noindent%
  \parshape=\L@parshape\relax%
  \hspace{\L@xoffset}%
  \ifDC@squeeze%
    \ifthenelse{\equal{\L@descender}{down}}{%
      \smash{%
        \llap{%
        \mbox{{\DCantefont\L@ante}}%
        \raisebox{\L@yoffset-\value{DC@lines}\baselineskip+3\baselineskip}{\usebox{\L@lbox}}%
        \hskip \the\L@Findent%
        }%
      }%
    }{}%
    \ifthenelse{\equal{\L@descender}{up}}{%
      \smash{%
        \llap{%
          \mbox{{\DCantefont\L@ante}}%
          \raisebox{\L@yoffset-\value{DC@lines}\baselineskip+2\baselineskip+\value{L@depth}\baselineskip+\DC@chardepth-\DC@maindescenderdepth}{\usebox{\L@lbox}}%
          \hskip \the\L@Findent%
        }%
      }%
    }{}%
    \ifthenelse{\equal{\L@descender}{off}}{%
      \smash{%
        \llap{%
        \mbox{{\DCantefont\L@ante}}%
        \raisebox{\L@yoffset-\value{DC@lines}\baselineskip+2\baselineskip+\value{L@depth}\baselineskip}{\usebox{\L@lbox}}%
        \hskip \the\L@Findent%
        }%
      }%
    }{}%
  \else%
    \smash{%
      \llap{%
      \mbox{{\DCantefont\L@ante}}%
      \raisebox{\L@yoffset-\value{DC@lines}\baselineskip+2\baselineskip+\value{L@depth}\baselineskip}{\usebox{\L@lbox}}%
      \hskip \the\L@Findent%
      }%
    }%
  \fi%
  % Note that there is no following text here.
} % end \dropcap


