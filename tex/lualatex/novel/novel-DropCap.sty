\def\Dropcap@height{%
   \setlength{\L@height}{\value{L@lines}\baselineskip}%
   \ifnum\value{L@lines}>1
     \addtolength{\L@height}{-\baselineskip}%
   \fi
   \addtolength{\L@height}{\L@top}%
} % end \Dropcap@height
%
\newcommand*{\CalculateDropcap}{%
   \Dropcap@height
   \sbox{\@tempboxa}{\dropcapfont\fontsize{\L@height}{\L@height}%
                     \selectfont X}%
   \@tempcntb=\ht\@tempboxa
   \@tempcnta=\L@height
   \multiply\@tempcnta by 100
   \divide\@tempcntb by 100
   \divide\@tempcnta by \@tempcntb
   \advance\@tempcnta by -9999
   \ifnum\@tempcnta>0
     \def\@tempa{1.\the\@tempcnta}%
   \else
     \def\@tempa{1}%
   \fi
   \dropcapfont
   \fontsize{\@tempa\L@height}{\@tempa\L@height}%
   \selectfont
}
