\newcommand\dropcap[2][]{% Note no additional argument.
  \setlength{\DefaultDCtop}{1.02\normalXheight}% 1.02 fudge for serif weight.
  \setlength{\DC@hangante}{\z@}%
  \global\@hangantefalse%
  \@parsedropcapstyle%
  \setcounter{DC@lines}{\value{DefaultDClines}}%
  \setcounter{DC@depth}{\value{DefaultDCdepth}}%
  \renewcommand*{\DC@xoffset}{\DefaultDCxoffset}%
  \renewcommand*{\DC@yoffset}{\DefaultDCyoffset}%
  \renewcommand*{\DC@antecol}{\DefaultDCantecol}%
  \renewcommand*{\DC@ante}{\textcolor{\DC@antecol}{\DefaultDCante}}%
  \setlength{\DC@kern}{\DefaultDCkern}%
  \setlength{\DC@gap}{\DefaultDCgap}%
  \setlength{\DC@slope}{\DefaultDCslope}%
  \renewcommand*{\DC@color}{\DefaultDCcolor}%
  \setlength{\DC@top}{\DefaultDCtop}%
  \renewcommand*{\DC@descender}{\DefaultDCdescender}%
  \setkeys{DC}{#1}%
  \setlength{\DC@Findent}{\DC@gap+\DC@kern}%
  \setlength{\DC@Nindent}{-\DC@kern}%
  \sbox{\DC@lbox}{\CalculateDropcap{#2}}%
  \setlength{\DC@chardepth}{\dp\DC@lbox}%
  \global\DC@chardepth=\DC@chardepth%
  \par%
  \addtolength{\DC@Nindent}{\DC@xoffset}%
  \setlength{\DC@Pindent}{\wd\DC@lbox}%
  \settowidth{\DC@hangante}{\DC@ante}%
  \if@hangante\addtolength{\DC@Pindent}{-\DC@hangante}\fi%
  \settowidth{\DC@first}{\DC@ante}%
  \addtolength{\DC@Pindent}{\DC@first}%
  \addtolength{\DC@Pindent}{\DC@Findent}%
  \setlength{\DC@first}{\linewidth}%
  \addtolength{\DC@first}{-\DC@Pindent}%
  \addtolength{\DC@Nindent}{\DC@Pindent}%
  \setlength{\DC@next}{\linewidth}%
  \addtolength{\DC@next}{-\DC@Nindent}%
  \addtolength{\DC@Pindent}{\rightmargin}%
  \addtolength{\DC@Nindent}{\rightmargin}%
  \setlength{\DropcapWidth}{\wd\DC@lbox}%
  \setlength{\DropcapHeight}{\ht\DC@lbox}%
  \setlength{\DropcapDepth}{\dp\DC@lbox}%
  \addtocounter{DC@lines}{1}%
  \ifDC@squeeze%
    \ifthenelse{\equal{\DC@descender}{down}}{%
      \ifnum\value{DC@depth}=0% %%%%%
        \setcounter{DC@depth}{1}%
      \fi%
    }{}%
  \fi%
  \addtocounter{DC@lines}{\value{DC@depth}}%
  \def\DC@parshape{\c@DC@lines \the\DC@Pindent \the\DC@first}%
  \@tempcnta=\tw@%
  \@whilenum \@tempcnta<\c@DC@lines\do{%
     \edef\DC@parshape{\DC@parshape \the\DC@Nindent \the\DC@next}%
     \addtolength{\DC@Nindent}{\DC@slope}%
     \addtolength{\DC@next}{-\DC@slope}%
     \advance\@tempcnta\@ne}%
  \edef\DC@parshape{\DC@parshape \rightmargin \the\linewidth}%
  \noindent%
  \parshape=\DC@parshape\relax%
  \hspace{\DC@xoffset}%
  \ifDC@squeeze%
    \ifthenelse{\equal{\DC@descender}{down}}{%
      \smash{%
        \llap{%
        \mbox{{\DCantefont\DC@ante}}%
        \raisebox{\DC@yoffset-\value{DC@lines}\baselineskip+3\baselineskip}{\usebox{\DC@lbox}}%
        \hskip \the\DC@Findent%
        }%
      }%
    }{}%
    \ifthenelse{\equal{\DC@descender}{up}}{%
      \smash{%
        \llap{%
          \mbox{{\DCantefont\DC@ante}}%
          \raisebox{\DC@yoffset-\value{DC@lines}\baselineskip+2\baselineskip+\value{DC@depth}\baselineskip+\DC@chardepth-\DC@maindescenderdepth}{\usebox{\DC@lbox}}%
          \hskip \the\DC@Findent%
        }%
      }%
    }{}%
    \ifthenelse{\equal{\DC@descender}{off}}{%
      \smash{%
        \llap{%
        \mbox{{\DCantefont\DC@ante}}%
        \raisebox{\DC@yoffset-\value{DC@lines}\baselineskip+2\baselineskip+\value{DC@depth}\baselineskip}{\usebox{\DC@lbox}}%
        \hskip \the\DC@Findent%
        }%
      }%
    }{}%
  \else%
    \smash{%
      \llap{%
      \mbox{{\DCantefont\DC@ante}}%
      \raisebox{\DC@yoffset-\value{DC@lines}\baselineskip+2\baselineskip+\value{DC@depth}\baselineskip}{\usebox{\DC@lbox}}%
      \hskip \the\DC@Findent%
      }%
    }%
  \fi%
  % Note that there is no following text here.
} % end \dropcap


